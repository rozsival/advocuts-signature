{
  "name": "advocuts-signature",
  "version": "1.0.0",
  "description": "Email signature for Advocuts.",
  "author": "Vít Rozsíval <mail@vitrozsival.cz>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "build": "run-s build:clean build:compile",
    "build:clean": "rimraf build",
    "build:compile": "ts-node -T src",
    "fix": "run-s ts lint:js:fix lint:css:fix prettier:fix",
    "lint": "run-s ts lint:js lint:css prettier",
    "lint:css": "stylelint **/*.scss",
    "lint:css:fix": "yarn lint:css --fix",
    "lint:js": "eslint --cache --ext js,ts .",
    "lint:js:fix": "yarn lint:js --fix",
    "prettier": "prettier --check '**/*.{js,json,md,scss}'",
    "prettier:fix": "yarn prettier --write",
    "ts": "tsc"
  },
  "devDependencies": {
    "@types/html-minifier": "^4.0.1",
    "@types/inline-css": "^3.0.1",
    "@types/node": "^14",
    "@types/sass": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "consola": "^2.15.3",
    "cpr": "^3.0.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^38.0.1",
    "eslint-plugin-unused-imports": "^1.1.5",
    "handlebars": "^4.7.7",
    "html-minifier": "^4.0.0",
    "image-size": "^1.0.0",
    "inline-css": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sass": "^1.43.4",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
